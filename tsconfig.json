{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES2015",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "types": ["vitest/globals"]
    },
    "include": ["src", "test"]
}
